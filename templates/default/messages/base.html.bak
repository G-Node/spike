{% extends "site_base.html" %}

{% load i18n %}

{% block head_title %}Notices{% endblock %}

{% block body_class %}inbox{% endblock %}

{% block navi_inbox_class %}aktiv{% endblock %}

{% block subnav_base %}
    <div class="clearfix" style="border-bottom: 1px solid #9BC;">
        <ul>
		<li><a href="{% url messages_compose %} ">{% trans "Compose" %}</a></li>
		<li><a href="{% url messages_inbox %} ">{% trans "Inbox" %} ({{ messages_inbox_count }})</a></li>
		<li><a href="{% url messages_outbox %} ">{% trans "Sent" %}</a></li>
		<li><a href="{% url messages_trash %}">{% trans "Trash" %}</a></li>
		<li><a href="{% url notification_notices %}">{% trans "Notices" %}{% if notice_unseen_count %} ({{ notice_unseen_count }}){% endif %}</a></li>
		<li><a href="{% url invitations %}">{% trans "Invitations" %}{% if invitations_count %} ({{ invitations_count }}){% endif %}</a></li>
		{% comment %}
		<li><a href="{% url deletedExperiments %}">{% trans "Trash #2" %}</a></li>
		<li><a href="{% url invitations_contacts %}">{% trans "Contacts" %}</a></li>
		{% endcomment %}
        </ul>
    </div>
    <div class="clearfix" style="background: #F0F7FF;">
        {% block subnav %}
        {% endblock %}
    </div>
{% endblock %}
